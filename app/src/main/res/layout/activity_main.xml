                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="@string/img0Rota"
                android:onClick="procesarImagen"
                android:src="@drawable/carta_trasera"
                android:tag="0"
                tools:ignore="DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck" />
        </FrameLayout>

        <FrameLayout>

            <ImageView
                android:id="@+id/img1"
